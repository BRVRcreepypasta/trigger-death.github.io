{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "newLine": "LF",
    "target": "es5",
    "sourceMap": false,
    "declaration": false,
    "jsx": "preserve",
    "lib": [
      "es2017",
      "dom",
      "es5"
    ],
    "types": [
      "requirejs"      // <<< added this, and npm installed @types/requirejs
    ],
    "baseUrl": ".",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": false,
  },
  "exclude": [
    ".git",
    "node_modules",
    "_site"
  ],
  "compileOnSave": true
}
